# ================================================
# GitHub Contributions Generator Configuration
# ================================================
# Copy this file to .env and update the values

# ------------------------------------------------
# Git Configuration (Required)
# ------------------------------------------------
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com
GIT_REPO_URL=https://github.com/username/repo.git
GIT_BRANCH=main
GIT_REMOTE_NAME=origin

# ------------------------------------------------
# Commit Configuration
# ------------------------------------------------
# Number of commits to create per day (random between min and max)
MIN_COMMITS_PER_DAY=1
MAX_COMMITS_PER_DAY=5

# ------------------------------------------------
# Schedule Configuration
# ------------------------------------------------
# Enable scheduled mode (runs as a service)
SCHEDULE_ENABLED=false

# Cron expression (default: 9 AM daily)
# Format: minute hour day-of-month month day-of-week
SCHEDULE_CRON=0 9 * * *

# Timezone for the schedule
SCHEDULE_TIMEZONE=America/New_York

# ------------------------------------------------
# Backfill Configuration
# ------------------------------------------------
# Enable backfill mode (fill in past dates)
BACKFILL_ENABLED=false

# Date range for backfill (YYYY-MM-DD format)
BACKFILL_START_DATE=2024-01-01
BACKFILL_END_DATE=2024-12-31

# Skip weekends during backfill
BACKFILL_SKIP_WEEKENDS=false

# Commits per day during backfill
BACKFILL_MIN_COMMITS=1
BACKFILL_MAX_COMMITS=8

# ------------------------------------------------
# Logging Configuration
# ------------------------------------------------
# Log level: error, warn, info, debug
LOG_LEVEL=info

# ------------------------------------------------
# Application Settings
# ------------------------------------------------
# Environment: development, production
NODE_ENV=development

# Dry run mode (no actual commits/pushes)
DRY_RUN=false

# Retry settings for git operations
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# ------------------------------------------------
# Health Check Server (for monitoring)
# ------------------------------------------------
HEALTH_ENABLED=true
HEALTH_PORT=3000
